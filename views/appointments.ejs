<%- include('partials/header') %>
<h1>Appointments</h1>

<% if (appointments.length === 0) { %>
  <p>No appointments found.</p> <!-- Add a message if there are no appointments -->
   <!-- Add a link to schedule an appointment -->
  <a href="/schedule">Book an Appointment Here</a>
<% } else { %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Time</th>
        <th>Service Type</th>
        <th>Description</th>
        <th>Status</th>
        <th>Actions</th> <!-- Add a new column for actions -->
      </tr>
    </thead>
    <tbody>
      <% appointments.forEach(appointment => { %>
        <tr>
          <td><%= appointment.date.toDateString() %></td>
          <td><%= appointment.time %></td>
          <td><%= appointment.serviceType %></td>
          <td><%= appointment.description %></td>
          <td><%= appointment.status %></td>
          <td>
            <% if (appointment.status === 'Scheduled') { %>
              <a href="/appointments/<%= appointment._id %>/cancel">Cancel</a> <!-- Add cancel link if status is 'scheduled' -->
              <a href="/appointments/<%= appointment._id %>/reschedule">Reschedule</a> <!-- Add reschedule link if status is 'scheduled' -->
            <% } %>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } %>
